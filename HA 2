import numpy as np
import matplotlib.pyplot as plt

#Replikator:
def replicator(x, M):
    return np.matmul(M, x)/np.dot(x, np.matmul(M, x))

#Parameter:
Payoff = 1
Injury = 1.5
InitD = 0.5
InitH = 1 - InitD
r = np.zeros(2)

#Payoff Matrix:
M = np.array([[(Payoff - Injury)/2, Payoff], [0, Payoff/2]])

def RelP():
    x = np.linspace(0, 30, 30)
    r = np.array([InitD, InitH])

    for i in range(r.shape[0]):
        r[i+1] = r[i] + r(x = r[i], M = M)

    plt.plot(x, r)
    plt.show
